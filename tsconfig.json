{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib/",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "importHelpers": true,
    "lib": ["es5", "es6"],
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
